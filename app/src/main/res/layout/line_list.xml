<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imgAvt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anh1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1">
    </androidx.constraintlayout.utils.widget.ImageFilterView>


    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif-monospace"
        android:maxLines="1"
        android:text="Tên"
        android:textColor="#AF271D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgAvt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenThuongGoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:maxWidth="250dp"
        android:maxLines="3"
        android:text="Tên thường gọi"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imgAvt"
        app:layout_constraintTop_toBottomOf="@+id/tvTen" />


    <TextView
        android:id="@+id/tvMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:maxWidth="250dp"
        android:maxLines="3"
        android:text="Mô tả:"
        app:layout_constraintStart_toEndOf="@+id/imgAvt"
        app:layout_constraintTop_toBottomOf="@+id/tvTenThuongGoi" />


</androidx.constraintlayout.widget.ConstraintLayout>